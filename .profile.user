source ~/.git-completion.bash

for tool in `/bin/ls $HOME/tools`; do
    #echo "Setting up $tool"
    if [ -d $HOME/tools/$tool/bin ]; then
        export PATH=$HOME/tools/$tool/bin:$PATH
    fi

    if [ -d $HOME/tools/$tool/lib ]; then
        export LD_LIBRARY_PATH=$HOME/tools/$tool/lib:$LD_LIBRARY_PATH
    fi

    if [ -d $HOME/tools/$tool/lib64 ]; then
        export LD_LIBRARY_PATH=$HOME/tools/$tool/lib64:$LD_LIBRARY_PATH
    fi
done

